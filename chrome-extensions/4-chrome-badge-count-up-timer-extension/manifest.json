{

  "manifest_version": 3,
  "name": "Badge Count Up Timer Abc",
  "version": "1.0.2",
  "description": "Shows a Count Up Timer in extension Badge (hours or minutes in 24 format, example: 2359)",

"icons": {
"512": "icon512x512.png"
},

"permissions":
[
"storage"
],
  

  
"action": {
    "default_icon": {              // optional
"512": "icon512x512.png"
    },
    "default_title": "refresh",   // optional, shown in tooltip
    "default_popup": "popup.html"  // optional
  },
  


  
"background": {
"service_worker": "background.js"
}



}
